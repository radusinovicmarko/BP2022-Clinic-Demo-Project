<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.unibl.etf.bp.gui.AddTypeOfExamController">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="18.0" prefWidth="250.0" text="Šifra pregleda">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="codeTF" prefWidth="250.0" promptText="Unesite šifru pregelda" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="250.0" text="Naziv pregleda">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="nameTF" prefWidth="250.0" promptText="Unesite naziv pregleda" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="82.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="250.0" text="Trenutna cijena pregleda sa osiguranjem">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="priceInsuranceTF" prefWidth="250.0" promptText="Unesite trenutnu cijenu sa osiguranjem" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="46.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="250.0" text="Trenutna cijena pregleda bez osiguranja">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="priceNoInsuranceTF" prefWidth="250.0" promptText="Unesite trenutnu cijenu bez osiguranja" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="40.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#onAddAction" prefWidth="70.0" text="Dodaj" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
